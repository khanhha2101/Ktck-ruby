<style>
    .card-edit{
        background-color: rgba(0,0,0,.1);
        box-shadow: 0 2px 10px rgb(0 0 0 / 10%);
        border: none;
        box-sizing: border-box;
        display: block;
        color: rgba(255,255,255,.85);
        letter-spacing: 0.5px;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        box-sizing: border-box;
    }
    .card-body-edit{
        padding: 1.25rem;
        box-sizing: border-box;
        display: block;
        font-family: 'Roboto', sans-serif;
        font-size: 15px;
        color: rgba(255,255,255,.85);
        letter-spacing: 0.5px;
        font-weight: 400;
        line-height: 1.5;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        box-sizing: border-box;
        min-height: 550px;
        /*background-color: rgba(0,0,0,.9);*/
    }
    .btn-edit{
        color: #fff;
        background-color: rgba(255,255,255,.125);
        border-color: rgba(255,255,255,.125);
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 1px;
        padding: 9px 19px;
        border-radius: 0.25rem;
        text-transform: uppercase;
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 8%);
        padding-left: 3rem!important;
        padding-right: 3rem!important;
        transition: none;
        text-align: center;
        vertical-align: middle;
        /*user-select: none;*/
        border: 1px solid #adb5bd;
        line-height: 1.5;
        margin: 0;
        height: 45px;
        /*box-sizing: border-box;*/
    }
    .btn-edit:hover{
        color: #fff;
        border-color: rgba(255,255,255,.125);
    }
    .btn-sm{
        background-color: rgba(255,255,255,.125);
    }
    .input-edit{
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        color: #fff;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid #fff;
        outline: none;
        background: transparent;
    }
    .input-edit::placeholder{
        font-size: 14px;
        color: white;
    }
</style>

<div class="bg-edit" >
  <div class="container w-50 py-5 px-md-5 card card-edit" style=" ">
    <div class="card-body card-body-edit" style="">
<%#= resource_name.to_s.humanize %>
<h2 style="text-align: center">Edit Profile</h2>

      <div style="margin-top: 30px; padding-left: 40px; padding-right: 40px">


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-group">
            <label for="formGroupExampleInput">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"formGroupExampleInput" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group" style="margin-top: 15px">
            <label for="formGroupExampleInput">Password</label> <i>(leave blank if you don't want to change it)</i><br />
            <%#= f.password_field :password, autocomplete: "new-password" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control ", id:"formGroupExampleInput" %>
          </div>

          <div class="field form-group" style="margin-top: 15px">
            <label for="formGroupExampleInput">Password confirmation</label>
            <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control ", id:"formGroupExampleInput" %>
          </div>

          <div class="field form-group " style="margin-top: 15px">
            <label for="formGroupExampleInput">Current passwordn (we need your current password to confirm your changes)</label>
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control ", id:"formGroupExampleInput" %>
          </div>

          <div class="actions" style="margin-top: 40px; text-align: center">
            <%= f.submit "Update", class: 'btn btn-edit' %>
          </div>
        <% end %>

        <div style="margin-top: 50px">
          <h5>Cancel my account</h5>

          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: 'btn btn-danger'%>

          <%#= link_to "Back", :back %>
        </div>

      </div>

    </div>
  </div>
</div>