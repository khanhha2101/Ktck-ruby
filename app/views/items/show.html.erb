<style>
    .card-edit{
        background-color: rgba(0,0,0,.1);
        box-shadow: 0 2px 10px rgb(0 0 0 / 10%);
        border: none;
        box-sizing: border-box;
        display: block;
        color: rgba(255,255,255,.85);
        letter-spacing: 0.5px;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        box-sizing: border-box;
    }
    .card-body-edit{
        padding: 1.25rem;
        box-sizing: border-box;
        display: block;
        font-family: 'Roboto', sans-serif;
        font-size: 15px;
        color: rgba(255,255,255,.85);
        letter-spacing: 0.5px;
        font-weight: 400;
        line-height: 1.5;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        box-sizing: border-box;
        min-height: 550px;
        /*background-color: rgba(0,0,0,.9);*/
    }
    .btn-edit{
        color: #fff;
        background-color: rgba(255,255,255,.125);
        border-color: rgba(255,255,255,.125);
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 1px;
        padding: 9px 19px;
        border-radius: 0.25rem;
        text-transform: uppercase;
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 8%);
        padding-left: 3rem!important;
        padding-right: 3rem!important;
        transition: none;
        text-align: center;
        vertical-align: middle;
        /*user-select: none;*/
        border: 1px solid #adb5bd;
        line-height: 1.5;
        margin: 0;
        height: 45px;
        /*box-sizing: border-box;*/
    }
    .btn-edit:hover{
        color: #fff;
        border-color: rgba(255,255,255,.125);
    }
    .btn-sm{
        background-color: rgba(255,255,255,.125);
    }
</style>

<div class="bg-edit" >
  <div class="container w-50 py-5 px-md-5 card card-edit" style=" ">
    <div class="card-body card-body-edit" style="">
  <p style="color: green"><%= notice %></p>
  <h1 style="text-align: center">Show item</h1>

      <div class="" style="margin-top: 30px;padding-left: 40px; padding-right: 40px">
        <div class="form-group">
          <label for="formGroupExampleInput">Title</label>
          <input type="text" class="form-control form-outline" id="formGroupExampleInput" disabled value="<%= @item.title %>">
        </div>
        <div class="form-group" style="margin-top: 20px">
          <label for="formGroupExampleInput2">Num</label>
          <input type="text" class="form-control form-outline" id="formGroupExampleInput2" disabled value="<%= @item.num %>">
        </div>
      </div>

  <div style="text-align: center; margin-top: 50px">

      <%= link_to "Back to items", items_path, style: 'color: white' %> |
      <%= link_to "Edit this item", edit_item_path(@item), style: 'color: white' %>

    <div class="row" style="margin-top: 20px">
      <%= button_to "Destroy this item", @item, method: :delete, class:'btn btn-danger' %>
    </div>
  </div>

    </div>
  </div>
</div>

